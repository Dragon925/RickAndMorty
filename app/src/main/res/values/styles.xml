<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemCard"/>

    <style name="ItemCard.Text" parent="ItemCard">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/font_text</item>
    </style>
    
    <style name="ItemCard.Text.Title" parent="ItemCard.Text">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="ItemCard.Text.Subtitle" parent="ItemCard.Text">
        <item name="android:textSize">@dimen/font_subtitle</item>
    </style>

    <style name="ItemCard.Text.Subtitle.Label" parent="ItemCard.Text.Subtitle">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:drawableTint">@color/grey_600</item>
    </style>
    
</resources>