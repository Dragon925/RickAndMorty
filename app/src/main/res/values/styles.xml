<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemCard"/>

    <style name="ItemCard.Text" parent="ItemCard">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/font_text</item>
    </style>
    
    <style name="ItemCard.Text.Title" parent="ItemCard.Text">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="ItemCard.Text.Subtitle" parent="ItemCard.Text">
        <item name="android:textSize">@dimen/font_subtitle</item>
    </style>

    <style name="ItemCard.Text.Subtitle.Label" parent="ItemCard.Text.Subtitle">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:drawableTint">@color/grey_600</item>
    </style>

    <style name="ItemPage"/>

    <style name="ItemPage.Text" parent="ItemPage">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/font_text</item>
    </style>

    <style name="ItemPage.Text.Title" parent="ItemPage.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="ItemPage.Text.Subtitle" parent="ItemPage.Text">
        <item name="android:textSize">@dimen/font_subtitle</item>
    </style>

    <style name="ItemPage.Text.Subtitle.Label" parent="ItemPage.Text.Subtitle">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:drawableTint">@color/grey_600</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BottomSheetDialog"/>

    <style name="BottomSheetDialog.Text" parent="BottomSheetDialog">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/font_text</item>
    </style>
    
</resources>